@model PeopleGetter.Models.Roupas

@{
    ViewData["Title"] = "Delete";
}

<div style="display:flex">
    <h1>Cadastrar</h1>
    <img src="~/excluir.png" height="50px" style="margin-left: 15px"></img>
</div>

<h3>Tem certeza que deseja excluir esse item?</h3>
<div>
    <h4>Roupas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tamanho)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tamanho)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.valor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
        <img src="~/voltar.png" height="15px"></img>
    </form>
</div>
